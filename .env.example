# Google Business Profile API Configuration
# Copy this file to .env and fill in your actual values

# OAuth2 Credentials File Path
GBP_CREDENTIALS_FILE=credentials.json

# Token Storage File Path  
GBP_TOKEN_FILE=token.json

# OAuth2 Redirect URI (for local development)
GBP_REDIRECT_URI=http://localhost:8080/callback

# Google Cloud Project ID (optional, for reference)
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# API Quota and Rate Limiting (for reference)
# Note: GBP API allows max 10 location edits per minute per profile
GBP_MAX_EDITS_PER_MINUTE=10

# Development/Testing Settings
DEBUG_MODE=false
LOG_LEVEL=INFO

# Example Business Profile Resource Names (for testing)
# Replace with your actual resource names after authentication
EXAMPLE_ACCOUNT_NAME=accounts/1234567890
EXAMPLE_LOCATION_NAME=accounts/1234567890/locations/0987654321

# API Endpoints (default values, usually don't need to change)
GBP_API_BASE_URL=https://mybusiness.googleapis.com
GBP_PERFORMANCE_API_BASE_URL=https://businessprofileperformance.googleapis.com